<!DOCTYPE html>
<html>

<head>
	<title>{{pers.name}} - Curriculum Vitae</title>
	<meta name="description" content="The Curriculum Vitae of {{pers.name}}." />
	<meta charset="UTF-8">
	<link type="text/css" rel="stylesheet" href="style.css">
	<link href="https://fonts.googleapis.com/css?family=Lato|Rokkitt:400,500,600,700,800,900" rel="stylesheet">

	<!--[if lt IE 9]>
<script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script>
<![endif]-->
</head>

<body id="top">
	<div id="cv" class="instaFade">
		<div class="mainDetails">
			<div id="headshot" class="quickFade">
				<img src="headshot.jpg" alt="{{pers.name}}" />
			</div>

			<div id="name">
				<h1 class="">{{pers.name}}</h1>
				<h2 class="">{{pers.jobTitle}}</h2>
			</div>

			<div id="contactDetails" class="quickFade delayFour">
				<ul>
					{{#if pers.email}}
					<li>e: <a href="mailto:{{pers.email}}" target="_blank">{{pers.email}}</a></li>
					{{/if}}
					{{#if pers.github}}
					<li>g: <a href="{{pers.github}}">{{pers.github}}</a></li>
					{{/if}}
					{{#if pers.linkedin}}
					<li>l: <a href="{{pers.linkedin}}">{{pers.linkedin}}</a></li>
					{{/if}}
					{{#if pers.mobile}}
					<li>m: {{pers.mobile}}</li>
					{{/if}}
					{{#if pers.website}}
					<li>w: <a href="{{pers.website}}">{{pers.website}}</a></li>
					{{/if}}
				</ul>
			</div>
			<div class="clear"></div>
		</div>

		<div id="mainArea" class="quickFade delayFive">
			<section>
				<article>
					<div class="sectionTitle">
						<h1>Summary</h1>
					</div>

					<div class="sectionContent summary">
						<p>{{summary}}</p>
					</div>
				</article>
				<div class="clear"></div>
			</section>

			<section>
				<div class="sectionTitle">
					<h1>Work Experiences</h1>
				</div>
				<div class="sectionContent">
					{{#each pastJobs}}
					<article>
						<header class="job-header">
							<h2>{{jobTitle}}</h2>
							<span class="subDetails">{{started}} - {{ended}}</span>
						</header>
						{{#each description}}
						<p>{{this}}</p>
						{{/each}}
					</article>
					{{/each}}
				</div>
				<div class="clear"></div>
			</section>
			<section class="notable-projects-section">
				<div class="sectionTitle">
					<h1>Notable Projects</h1>
				</div>

				<div class="sectionContent">
					<ul class="notable-projects section-marked-list">
						{{#each notableProjects}}
						<article>
							<h2>{{title}}</h2>
							{{#each description}}
							<p>{{this}}</p>
							{{/each}}
							<p><span>Tech:</span> <span class="tech">{{tech}}</span></p>
						</article>
						{{/each}}
					</ul>
				</div>
				<div class="clear"></div>
			</section>
			<section class="other-projects-section">
				<div class="sectionTitle">
					<h1>Other Projects</h1>
				</div>

				<div class="sectionContent">
					<ul class="notable-projects section-marked-list">
						{{#each projects}}
						<li>{{this}}</li>
						{{/each}}
					</ul>
				</div>
				<div class="clear"></div>
			</section>
			<section class="key-skills">
				<div class="sectionTitle">
					<h1>Key Skills</h1>
				</div>

				<div class="sectionContent">
					<ul class="keySkills">
						{{#each skills}}
						<li>{{this}}</li>
						{{/each}}
					</ul>
				</div>
				<div class="clear"></div>
			</section>
			<section>
				<div class="sectionTitle">
					<h1>Interests</h1>
				</div>

				<div class="sectionContent">
					<ul class="other-interests section-marked-list">
						{{#each others}}
						<li>{{this}}</li>
						{{/each}}
					</ul>
				</div>
				<div class="clear"></div>
			</section>

			<section>
				<div class="sectionTitle">
					<h1>Education</h1>
				</div>

				<div class="sectionContent">
					{{#each educations}}
					<article>
						<h2>{{name}}</h2>
						<p class="">{{qualification}}</p>
						<p>{{description}}</p>
					</article>
					{{/each}}
				</div>
				<div class="clear"></div>
			</section>
		</div>
	</div>
</body>

</html>